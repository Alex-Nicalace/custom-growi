{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "declaration": true,
    "noResolve": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noEmit": false,
    "inlineSources": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"],
      "debug": ["./server/utils/logger/alias-for-debug"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/client",
    "src/components",
    "src/linter-checker",
    "src/migrations",
    "src/styles",
    "src/styles-hackmd",
    "src/test"
  ]
}
