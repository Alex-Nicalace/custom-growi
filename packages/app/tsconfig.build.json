{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "alwaysStrict": true,
    "jsx": "react",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
