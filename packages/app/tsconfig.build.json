{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "esnext",
    "jsx": "react",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "paths": {
      "~/*": ["./src/*"],
      "^/*": ["./*"],
      "debug": ["./src/server/utils/logger/alias-for-debug"]
    }
  }
}
